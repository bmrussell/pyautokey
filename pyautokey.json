{
    "config": {
        "macro_start": ":",
        "macro_end": "Key.space",
        "segment_delay": "500"
    },
    "replacements": {
        "shebang": "#!/usr/bin/env bash",
        "cross": "❌ ",
        "shruggie": "¯\\_(ツ)_/¯ ",
        "tick": "✔ ",
        "look": "👀 ",
        "note": "🎵 ",
        "run": "🏃‍️ ",
        "fire": "🔥 ",
        "clock": "🕙 ",
        "email": "📧 ",
		"pin": "📌 ",
		"bulb": "💡 ",
        "para": "§ ",
        "facepalm": "(－‸ლ)",
        "cube": "³",
        "square": "²",
        "date": "<date> ",
        "time": "<time> ",
        "now": "<date><delay 2000><time> ",
        "lorem": "<lorem>",
		"pfa": "Please find attached ",
		"me": "Brian Russell",
		"mail": "email@domain.com",
        "q": "❓ ",
		"tel": "+44 111 222 333",
		"quote": "<quote>"
    },
    "plugins": [
        "plugins.plug_date",
        "plugins.plug_time",
        "plugins.plug_pasteupper",
        "plugins.plug_pastelower",
        "plugins.plug_pastetitle",
        "plugins.plug_uatu",
        "plugins.plug_lorem",
		"plugins.plug_quote",
        "plugins.plug_uatu",
        "plugins.plug_pasteonenote"
    ],
    "actions": [
        {
            "type": "plug_date",
            "trigger": "replacement",
            "shortmatch": "<date>"
        },
        {
            "type": "plug_time",
            "trigger": "replacement",
            "shortmatch": "<time>"
        },
        {
            "type": "plug_pasteupper",
            "trigger": "hotkey",
            "shortmatch": "<ctrl>+<shift>+u"
        },
        {
            "type": "plug_pastelower",
            "trigger": "hotkey",
            "shortmatch": "<ctrl>+<shift>+l"
        },
        {
            "type": "plug_pastetitle",
            "trigger": "hotkey",
            "shortmatch": "<ctrl>+<shift>+k"
        },
		{
			"type": "plug_pasteonenote",
			"trigger": "hotkey",
			"shortmatch": "<ctrl>+<shift>+o"
		},
        {
            "type": "plug_lorem",
            "trigger": "replacement",
            "shortmatch": "<lorem>"
        },
		{
			"type": "plug_quote",
			"trigger": "replacement",
			"shortmatch": "<quote>"
		},
        {
            "type": "plug_uatu",
            "trigger": "async",
            "shortmatch": "C:\\path\\file to watch.txt"
        }
    ]
}