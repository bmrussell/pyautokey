{
    "config": {
        "macro_start": ":",
        "macro_end": "Key.space",
        "segment_delay": "500"
    },
    "replacements": {
        "shebang": "#!/usr/bin/env bash",
        "cross": "❌ ",
        "shruggie": "¯\\_(ツ)_/¯ ",
        "tick": "✔ ",
        "look": "👀 ",
        "note": "🎵 ",
        "run": "🏃‍️ ",
        "fire": "🔥 ",
        "clock": "🕙 ",
        "email": "📧 ",
        "para": "§ ",
        "facepalm": "(－‸ლ)",
        "cube": "³",
        "square": "²",
        "date": "<date> ",
        "time": "<time> ",
        "now": "<date><delay 2000><time> ",
        "lorem": "<lorem>"
    },
    "plugins": [
        "plugins.plug_date",
        "plugins.plug_time",
        "plugins.plug_pasteupper",
        "plugins.plug_lorem"
    ],
    "actions": [
        {
            "type": "plug_date",
            "trigger": "replacement",
            "shortmatch": "<date>"
        },
        {
            "type": "plug_time",
            "trigger": "replacement",
            "shortmatch": "<time>"
        },
        {
            "type": "plug_pasteupper",
            "trigger": "hotkey",
            "shortmatch": "<ctrl>+<shift>+u"
        },
        {
            "type": "plug_lorem",
            "trigger": "replacement",
            "shortmatch": "<lorem>"
        }
    ]
}